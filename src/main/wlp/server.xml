<server>
    <featureManager>
        <feature>servlet-3.1</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080">
        <tcpOptions soReuseAddr="true"/>
    </httpEndpoint>

    <application name="JavaHelloWorldApp01" context-root="/JavaHelloWorldApp01" location="${appLocation}" type="war"/>

    <httpSession cookieDomain=".mybluemix.net"/>
</server>
